{
  "version": 2,
  "builds": [
    {
      "src": "lambdas/chromium/screenshot.js",
      "use": "@now/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/screenshot",
      "dest": "/lambdas/chromium/screenshot.js"
    },
    {
      "src": "/",
      "status": 301,
      "headers": {
        "Location": "/screenshot?url=https://github.com/orbiting/backends/master/puppeteer/lambdas/chromium"
      }
    }
  ],
  "env": {
    "URL_WHITELIST": "@url_whitelist"
  }
}
